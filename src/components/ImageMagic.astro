---
interface Props {
  src: string;
  alt: string;
  className?: string;
}
const { src, alt, className = "" } = Astro.props;
---

<div class={`relative overflow-hidden group shadow-2xl ${className}`}>
  <div class="absolute inset-0 pointer-events-none opacity-[0.04] mix-blend-overlay z-10 noise-layer"></div>
  
  <img 
    src={src} 
    alt={alt} 
    class="img-magic-circle w-full h-full object-cover"
    loading="lazy"
  />
</div>

<style>
  .noise-layer {
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
  }

  .img-magic-circle {
    /* Estado Base: Blanco y Negro Editorial */
    filter: grayscale(100%) contrast(1.1) brightness(0.9);
    transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
    transform: scale(1.01);
  }

  .group:hover .img-magic-circle {
    /* Estado Hover: Revelado Fr√≠o y Desaturado */
    filter: grayscale(40%) contrast(1.05) sepia(10%) hue-rotate(140deg);
    transform: scale(1.03);
  }
</style>