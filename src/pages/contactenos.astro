---
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions';
---
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Contacto | Bahos & Burbano</title>
    <ClientRouter />
    <link href="https://fonts.googleapis.com/css2?family=B612+Mono:wght@700&family=Inter:wght@400;600&family=Libre+Baskerville:ital,wght@0,400;1,400&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="nav-minimal">
        <div class="nav-links">
            <a href="/">Inicio</a>
            <a href="/servicios">Servicios</a>
            <a href="/nosotros">Nosotros</a>
            <a href="/talento">Talento</a>
            <a href="/insights">Insights</a>
            <a href="/contacto">Contacto</a>
        </div>
    </nav>
    <main class="main-container">
        <header>
            <h1 class="brand-name">Contacto</h1>
            <div class="gold-divider"></div>
        </header>
        <section style="display: grid; grid-template-columns: 1fr 1fr; gap: 4rem; max-width: 900px; text-align: left; font-family: 'Inter', sans-serif;">
            <div>
                <h3 style="text-transform: uppercase; letter-spacing: 0.2em; font-size: 0.7rem; color: var(--color-acento);">Atención Directa</h3>
                <p style="font-size: 1.1rem; margin-top: 1.5rem;">
                    <a href="mailto:infolegal@bahosburbano.com" style="color: inherit; text-decoration: none; border-bottom: 1px solid rgba(31,64,55,0.2);">infolegal@bahosburbano.com</a>
                </p>
            </div>
            <div style="border-left: 1px solid rgba(31,64,55,0.1); padding-left: 4rem;">
                <h3 style="text-transform: uppercase; letter-spacing: 0.2em; font-size: 0.7rem; color: var(--color-acento);">Sede Principal</h3>
                <p style="font-size: 0.95rem; margin-top: 1.5rem; line-height: 1.8; opacity: 0.8;">Popayán, Cauca<br>Colombia</p>
            </div>
        </section>
        <footer class="minimal-footer"><p>© 2025 BAHOS & BURBANO. TODOS LOS DERECHOS RESERVADOS.</p></footer>
    </main>
</body>
</html>
