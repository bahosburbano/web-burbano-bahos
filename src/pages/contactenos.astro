---
// src/pages/contactenos.astro
import '../styles/global.css';
import ImageMagic from '../components/ImageMagic.astro';
---

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contacto | Bahos & Burbano</title>
    <link href="https://fonts.googleapis.com/css2?family=B612+Mono&family=Libre+Baskerville:ital@0;1&family=Inter:wght@300;400&display=swap" rel="stylesheet">
</head>
<body>

    <nav class="nav-header">
        <div class="nav-container">
            <div class="nav-links">
                <a href="/">Inicio</a>
                <a href="/la-firma">La Firma</a>
                <a href="/areas-de-practica">Práctica</a> 
                <a href="/talento">Talento</a>
            </div>
            <a href="/contactenos" class="nav-cta active">Consulta Estratégica</a>
        </div>
    </nav>

    <main>
        <header class="contact-header">
            <div class="header-image-wrapper">
                <ImageMagic 
                    src="/fondo-contacto.webp" 
                    alt="Contacto Bahos & Burbano" 
                    className="h-full w-full"
                />
            </div>
            <div class="header-overlay">
                <span class="descriptor">CANALES DE ACCESO</span>
                <h1 class="page-title">Contacto</h1>
                <div class="gold-line"></div>
            </div>
        </header>

        <section class="contact-grid-section">
            <div class="contact-container">
                <div class="contact-info">
                    <h2 class="info-heading">Iniciar Diálogo <br>Profesional</h2>
                    <p class="info-text">Establezca contacto con nuestra firma para evaluaciones técnicas o requerimientos de alta complejidad.</p>
                    
                    <div class="direct-channels">
                        <div class="channel-item">
                            <span class="channel-label">Correo Electrónico</span>
                            <a href="mailto:contacto@bahosburbano.com" class="channel-link">contacto@bahosburbano.com</a>
                        </div>
                        <div class="channel-item">
                            <span class="channel-label">Atención Central</span>
                            <a href="tel:+570000000" class="channel-link">+57 (601) 000 0000</a>
                        </div>
                    </div>
                </div>

                <div class="locations-block">
                    <h3 class="locations-title">Ubicuidad Estratégica</h3>
                    <div class="locations-list">
                        <div class="city-item">
                            <h4>Bogotá D.C.</h4>
                            <p>Centro Internacional / Área Financiera</p>
                        </div>
                        <div class="city-item">
                            <h4>Cali</h4>
                            <p>Valle del Cauca</p>
                        </div>
                        <div class="city-item">
                            <h4>Popayán</h4>
                            <p>Sede Histórica / Cauca</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer class="main-footer">
        <div class="footer-content">
            <div class="footer-left">
                <span class="footer-logo">B <span class="amp">&</span> B</span>
                <span class="footer-descriptor">Derecho | Empresa | Estado</span>
            </div>
            <div class="footer-center">
                <a href="#">Privacidad</a>
                <a href="#">Términos</a>
            </div>
            <div class="footer-right">
                <p>Bogotá | Cali | Popayán</p>
                <p class="copyright">© 2026 Bahos <span class="amp">&</span> Burbano.</p>
            </div>
        </div>
    </footer>

</body>
</html>

<style>
    :root {
        --color-firma: #1F4037;
        --color-oro: #C5A059;
        --font-apellidos: 'Libre Baskerville', serif;
        --font-descriptor: 'Inter', sans-serif;
        --font-mono: 'B612 Mono', monospace;
    }

    .amp { font-family: var(--font-mono); font-style: normal; }

    /* HEADER */
    .contact-header { height: 50vh; position: relative; display: flex; align-items: center; justify-content: center; overflow: hidden; }
    .header-image-wrapper { position: absolute; inset: 0; z-index: -1; }
    .header-overlay { text-align: center; color: white; z-index: 10; }
    .descriptor { display: block; font-family: var(--font-descriptor); font-size: 0.7rem; letter-spacing: 0.4em; text-transform: uppercase; margin-bottom: 1rem; opacity: 0.8; }
    .page-title { font-family: var(--font-apellidos); font-size: 3.5rem; margin-bottom: 1.5rem; }
    .gold-line { width: 40px; height: 1px; background: var(--color-oro); margin: 0 auto; }

    /* GRID SECTION */
    .contact-grid-section { padding: 8rem 2rem; background-color: #fdfdfb; }
    .contact-container { max-width: 1100px; margin: 0 auto; display: grid; grid-template-columns: 1fr 1fr; gap: 6rem; }

    .info-heading { font-family: var(--font-apellidos); font-size: 2.5rem; line-height: 1.2; color: var(--color-firma); margin-bottom: 2rem; }
    .info-text { font-family: 'Inter', sans-serif; font-weight: 300; line-height: 1.8; color: #555; margin-bottom: 3rem; }

    .channel-item { margin-bottom: 2rem; }
    .channel-label { display: block; font-family: var(--font-descriptor); font-size: 0.65rem; text-transform: uppercase; letter-spacing: 0.2em; color: var(--color-oro); margin-bottom: 0.5rem; }
    .channel-link { font-family: var(--font-mono); font-size: 1.1rem; text-decoration: none; color: var(--color-firma); transition: opacity 0.3s; }
    .channel-link:hover { opacity: 0.6; }

    /* SEDES */
    .locations-block { background-color: white; padding: 4rem; border: 1px solid rgba(31,64,55,0.05); box-shadow: 0 20px 40px rgba(0,0,0,0.02); }
    .locations-title { font-family: var(--font-descriptor); font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.3em; margin-bottom: 3rem; color: var(--color-firma); border-bottom: 1px solid #eee; padding-bottom: 1rem; }
    
    .city-item { margin-bottom: 2.5rem; }
    .city-item h4 { font-family: var(--font-apellidos); font-size: 1.2rem; margin-bottom: 0.3rem; color: var(--color-firma); }
    .city-item p { font-size: 0.85rem; color: #888; letter-spacing: 0.02em; }

