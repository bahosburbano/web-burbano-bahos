---
// src/pages/index.astro
import '../styles/global.css';
import ImageMagic from '../components/ImageMagic.astro';
---

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bahos & Burbano | Arquitectura Jurídica</title>
    <link href="https://fonts.googleapis.com/css2?family=B612+Mono&family=Libre+Baskerville:ital@0;1&family=Inter:wght@300;400&display=swap" rel="stylesheet">
</head>
<body>

    <nav class="nav-header">
        <div class="nav-container">
            <div class="nav-links">
                <a href="/" class="active">Inicio</a>
                <a href="/la-firma">La Firma</a> 
                <a href="/areas-de-practica">Práctica</a>
                <a href="/talento">Talento</a>
            </div>
            <a href="/contactenos" class="nav-cta">Consulta Estratégica</a>
        </div>
    </nav>

    <main>
        
        <section class="hero-section">
            <div class="hero-bg-wrapper">
                <ImageMagic 
                    src="/hero-home.webp" 
                    alt="Bahos & Burbano - Arquitectura Jurídica" 
                    className="w-full h-full"
                />
            </div>
            <div class="hero-content">
                <span class="hero-descriptor">DERECHO <span class="amp">&</span> EMPRESA <span class="amp">&</span> ESTADO</span>
                <h1 class="hero-title">Arquitectura jurídica<br>de alto nivel.</h1>
                <p class="hero-subtitle">Incidencia estructural y blindaje estratégico<br>en entornos de alta complejidad.</p>
                
                <div class="hero-actions">
                    <a href="/contactenos" class="btn-primary">Iniciar Evaluación Técnica</a>
                    <a href="/areas-de-practica" class="btn-secondary">Explorar Áreas</a>
                </div>
            </div>
        </section>

        <section class="differential-section">
            <div class="differential-grid">
                <div class="differential-content">
                    <span class="section-label">Criterio de Autor</span>
                    <blockquote class="differential-quote">
                        "Operamos bajo un modelo de involucramiento directo. No delegamos el núcleo intelectual; lo resolvemos mediante una arquitectura normativa diseñada para resistir el escrutinio institucional."
                    </blockquote>
                </div>
                <div class="differential-image">
                    <ImageMagic 
                        src="/criterio-autor.webp" 
                        alt="Criterio de Autor - Detalle" 
                        className="aspect-[4/5] shadow-2xl"
                    />
                </div>
            </div>
        </section>

        <section class="pillars-visual-header">
            <ImageMagic 
                src="/pilares-home.webp" 
                alt="Pilares Institucionales" 
                className="h-[40vh] w-full"
            />
        </section>

        <section class="pillars-section">
            <div class="pillar-item">
                <h3 class="pillar-heading">Derecho Público <span class="amp">&</span><br>Constitucional</h3>
                <span class="pillar-arrow">→</span>
            </div>
            <div class="pillar-item">
                <h3 class="pillar-heading">Derecho Corporativo <span class="amp">&</span><br>Compliance</h3>
                <span class="pillar-arrow">→</span>
            </div>
            <div class="pillar-item">
                <h3 class="pillar-heading">Derecho Médico <span class="amp">&</span><br>Sanitario</h3>
                <span class="pillar-arrow">→</span>
            </div>
            <div class="pillar-item">
                <h3 class="pillar-heading">Movilidad Internacional <span class="amp">&</span><br>Migratorio</h3>
                <span class="pillar-arrow">→</span>
            </div>
        </section>

    </main>

    <footer class="main-footer">
        <div class="footer-content">
            <div class="footer-left">
                <span class="footer-logo">B <span class="amp">&</span> B</span>
                <span class="footer-descriptor">Derecho | Empresa | Estado</span>
            </div>
            <div class="footer-center">
                <a href="#">Privacidad</a>
                <a href="#">Términos</a>
            </div>
            <div class="footer-right">
                <p>Bogotá | Cali | Popayán | </p>
                <p class="copyright">© 2026 Bahos <span class="amp">&</span> Burbano.</p>
            </div>
        </div>
    </footer>

</body>
</html>

<style>
    /* VARIABLES Y RESETS */
    :root {
        --color-firma: #1F4037;
        --color-oro: #C5A059;
        --font-apellidos: 'Libre Baskerville', serif;
        --font-descriptor: 'Inter', sans-serif;
        --font-body: 'Inter', sans-serif;
        --font-mono: 'B612 Mono', monospace;
    }

    .amp { font-family: var(--font-mono); font-style: normal; }
    
    /* NAV */
    .nav-header { padding: 1.5rem 3rem; background: rgba(253,253,251,0.95); backdrop-filter: blur(10px); position: fixed; top: 0; width: 100%; z-index: 1000; border-bottom: 1px solid rgba(31,64,55,0.05); box-sizing: border-box; }
    .nav-container { display: flex; justify-content: space-between; align-items: center; max-width: 1400px; margin: 0 auto; }
    .nav-links { display: flex; gap: 3rem; }
    .nav-links a { text-decoration: none; color: var(--color-firma); font-family: var(--font-descriptor); font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.2em; opacity: 0.6; transition: all 0.3s; }
    .nav-links a:hover, .nav-links a.active { opacity: 1; color: var(--color-oro); }
    .nav-cta { text-decoration: none; color: #FDFDFB; background-color: var(--color-firma); font-family: var(--font-descriptor); font-size: 0.7rem; text-transform: uppercase; letter-spacing: 0.15em; padding: 0.8rem 1.8rem; transition: all 0.4s; }
    .nav-cta:hover { background-color: var(--color-oro); transform: translateY(-2px); }

    /* HERO */
    .hero-section { height: 100vh; position: relative; display: flex; align-items: center; justify-content: center; overflow: hidden; }
    .hero-bg-wrapper { position: absolute; inset: 0; z-index: -1; }
    .hero-content { max-width: 900px; padding: 0 2rem; text-align: center; color: white; z-index: 10; text-shadow: 0 4px 20px rgba(0,0,0,0.3); }
    .hero-descriptor { display: block; font-family: var(--font-descriptor); font-size: 0.75rem; letter-spacing: 0.4em; margin-bottom: 2rem; opacity: 0.9; }
    .hero-title { font-family: var(--font-apellidos); font-size: clamp(2.5rem, 5vw, 4.5rem); line-height: 1.1; margin-bottom: 1.5rem; }
    .hero-subtitle { font-family: var(--font-body); font-weight: 300; font-size: 1.1rem; line-height: 1.6; opacity: 0.9; margin-bottom: 3.5rem; }
    .hero-actions { display: flex; justify-content: center; gap: 1.5rem; }
    
    .btn-primary { text-decoration: none; background-color: white; color: var(--color-firma); padding: 1.2rem 2.5rem; font-family: var(--font-descriptor); text-transform: uppercase; letter-spacing: 0.15em; font-size: 0.7rem; transition: all 0.4s ease; border: 1px solid white; }
    .btn-primary:hover { background-color: transparent; color: white; }
    .btn-secondary { text-decoration: none; background-color: transparent; color: white; padding: 1.2rem 2.5rem; font-family: var(--font-descriptor); text-transform: uppercase; letter-spacing: 0.15em; font-size: 0.7rem; border: 1px solid rgba(255,255,255,0.4); transition: all 0.4s ease; }
    .btn-secondary:hover { background-color: rgba(255,255,255,0.1); border-color: white; }

    /* DIFFERENTIAL */
    .differential-section { padding: 10rem 3rem; background-color: #FDFDFB; }
    .differential-grid { max-width: 1200px; margin: 0 auto; display: grid; grid-template-columns: 1.2fr 0.8fr; gap: 6rem; align-items: center; }
    .section-label { font-family: var(--font-descriptor); font-size: 0.7rem; text-transform: uppercase; letter-spacing: 0.3em; color: var(--color-oro); margin-bottom: 2.5rem; display: block; }
    .differential-quote { font-family: var(--font-apellidos); font-size: clamp(1.5rem, 3vw, 2.2rem); font-style: italic; line-height: 1.4; color: var(--color-firma); position: relative; }

    /* PILLARS */
    .pillars-visual-header { border-top: 1px solid rgba(31,64,55,0.05); }
    .pillars-section { display: grid; grid-template-columns: repeat(4, 1fr); border-top: 1px solid rgba(31,64,55,0.1); }
    .pillar-item { padding: 5rem 2.5rem; border-right: 1px solid rgba(31,64,55,0.05); transition: all 0.5s; display: flex; flex-direction: column; justify-content: space-between; min-height: 280px; }
    .pillar-item:hover { background: var(--color-firma); }
    .pillar-item:hover .pillar-heading { color: white; }
    .pillar-heading { font-family: var(--font-apellidos); font-size: 1.25rem; line-height: 1.3; transition: color 0.4s; }
    .pillar-arrow { font-family: var(--font-mono); font-size: 1.2rem; color: var(--color-oro); text-align: right; transform: translateX(-10px); opacity: 0; transition: all 0.4s; }
    .pillar-item:hover .pillar-arrow { opacity: 1; transform: translateX(0); }

    /* FOOTER */
    .main-footer { background-color: #f8f8f6; padding: 5rem 3rem; color: var(--color-firma); }
    .footer-content { max-width: 1400px; margin: 0 auto; display: flex; justify-content: space-between; align-items: flex-end; }

    /* RESPONSIVE */
    @media (max-width: 1024px) { 
        .differential-grid { grid-template-columns: 1fr; text-align: center; }
        .differential-image { max-width: 500px; margin: 0 auto; }
        .pillars-section { grid-template-columns: repeat(2, 1fr); }
    }
    @media (max-width: 768px) { 
        .hero-title { font-size: 2.8rem; }
        .hero-actions { flex-direction: column; }
        .pillars-section { grid-template-columns: 1fr; }
        .nav-links { display: none; }
    }
</style>