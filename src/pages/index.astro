---
import Mantenimiento from '../components/Mantenimiento.astro';
import Layout from '../layouts/PageLayout.astro';

// FLAG DE MANTENIMIENTO (LA RECOMENDACIÓN DE LA TÍA)
// Cambia a "false" cuando quieras que la web real sea visible.
const maintenance = true;
---

{maintenance ? (
  <Mantenimiento />
) : (
  <Layout>
    <p>La web real de la firma va aquí.</p>
  </Layout>
)}
