---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import ImageMagic from '../components/ImageMagic.astro';

const areas = [
  { title: "Derecho Público & Constitucional", img: "/area-publico.webp", href: "/servicios/publico" },
  { title: "Derecho Corporativo & Compliance", img: "/area-corporativo.webp", href: "/servicios/corporativo" },
  { title: "Derecho Médico & Sanitario", img: "/area-medico.webp", href: "/servicios/medico" },
  { title: "Movilidad Internacional & Migratorio", img: "/area-movilidad.webp", href: "/servicios/movilidad" }
];
---

<Layout title="Arquitectura Jurídica">
  
  <section class="relative h-screen flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-[#0d1a16]/40 z-10"></div>
      <ImageMagic src="/hero-home.webp" alt="Bahos & Burbano Hero" aspect="video" className="h-full w-full" />
    </div>
    
    <div class="relative z-20 text-center px-6 max-w-5xl">
      <p class="text-[10px] tracking-[0.6em] uppercase text-[#d4c3a5] mb-8 reveal-text" style="animation-delay: 0.2s;">
        Precisión Estructural
      </p>
      <h1 class="text-4xl md:text-7xl font-light leading-[1.1] mb-10 reveal-text" style="animation-delay: 0.4s;">
        La autoridad jurídica nace de la <span class="italic font-serif text-[#d4c3a5]">precisión</span> con la que se estructura la decisión.
      </h1>
      <div class="linea-tension max-w-xs mx-auto mb-10 opacity-60"></div>
      <p class="text-lg md:text-xl font-light tracking-wide text-[#e5e7eb]/80 reveal-text" style="animation-delay: 0.6s;">
        Arquitectura jurídica para decisiones de alta incidencia.
      </p>
    </div>

    <div class="absolute bottom-10 left-1/2 -translate-x-1/2 z-20 opacity-30">
      <div class="w-[1px] h-12 bg-gradient-to-b from-[#d4c3a5] to-transparent"></div>
    </div>
  </section>

  <section id="manifiesto" class="py-40 px-8 bg-[#0d1a16]">
    <div class="max-w-7xl mx-auto grid md:grid-cols-2 gap-24 items-center">
      <div class="order-2 md:order-1 relative">
        <div class="absolute -top-4 -left-4 w-20 h-20 border-t border-l border-[#d4c3a5]/20 z-0"></div>
        <ImageMagic src="/manifiesto.webp" alt="Manifiesto Jurídico" aspect="portrait" className="relative z-10 shadow-2xl" />
      </div>
      <div class="order-1 md:order-2">
        <h2 class="text-[10px] tracking-[0.5em] uppercase text-[#d4c3a5] mb-12">Manifiesto Institucional</h2>
        <p class="text-3xl md:text-5xl font-light leading-tight mb-10 text-[#e5e7eb]">
          Definimos el derecho como el sistema que <span class="text-[#d4c3a5]">organiza el poder</span>.
        </p>
        <div class="w-12 h-[1px] bg-[#d4c3a5] mb-10"></div>
        <p class="text-xl text-[#e5e7eb]/60 leading-relaxed font-light max-w-md">
          Intervenimos estructuras corporativas e institucionales para convertirlas en activos jurídicos resilientes frente a la volatilidad regulatoria.
        </p>
      </div>
    </div>
  </section>

  <section class="py-40 px-8 border-y border-[#e5e7eb]/5 bg-[#0a1412]">
    <div class="max-w-7xl mx-auto">
      <div class="flex flex-col md:flex-row justify-between items-end mb-20 gap-8">
        <div>
          <h2 class="text-[10px] tracking-[0.5em] uppercase text-[#d4c3a5] mb-6">Especialidades</h2>
          <p class="text-4xl font-light tracking-tight">Áreas de Práctica</p>
        </div>
        <a href="/servicios" class="group flex items-center gap-4 text-[10px] tracking-widest uppercase pb-2">
          <span class="border-b border-[#d4c3a5]/30 group-hover:border-[#d4c3a5] transition-seda">Ver todas</span>
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" class="group-hover:translate-x-2 transition-seda">
            <path d="M5 12H19M19 12L13 6M19 12L13 18" stroke="#d4c3a5" stroke-width="0.5"/>
          </svg>
        </a>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {areas.map((area, index) => (
          <a href={area.href} class="group block relative overflow-hidden">
            <div class="mb-8 overflow-hidden">
              <ImageMagic src={area.img} alt={area.title} aspect="square" />
            </div>
            <div class="flex items-start gap-4">
              <span class="font-['B612_Mono'] text-[9px] text-[#d4c3a5] pt-1">0{index + 1}</span>
              <div>
                <h3 class="text-[12px] tracking-[0.2em] uppercase font-light leading-relaxed group-hover:text-[#d4c3a5] transition-seda">
                  {area.title}
                </h3>
                <div class="w-0 group-hover:w-full h-[1px] bg-[#d4c3a5]/40 mt-4 transition-all duration-700"></div>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="relative py-60 overflow-hidden bg-black">
    <div class="absolute inset-0 z-0 opacity-20">
      <ImageMagic src="/pilares-home.webp" alt="Pilares de la firma" aspect="wide" className="h-full w-full" />
    </div>
    <div class="relative z-10 max-w-7xl mx-auto px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-16 md:gap-8">
        {[
          { label: "Identidad", value: "Autoría Técnica" },
          { label: "Alcance", value: "Ubicuidad Estratégica" },
          { label: "Fundamento", value: "Rigor Constitucional" }
        ].map((pilar) => (
          <div class="text-center group">
            <p class="text-[9px] tracking-[0.6em] text-[#d4c3a5] mb-6 uppercase opacity-60 group-hover:opacity-100 transition-seda">
              {pilar.label}
            </p>
            <span class="text-2xl font-light tracking-wider block group-hover:scale-105 transition-seda italic font-serif">
              {pilar.value}
            </span>
            <div class="mt-8 w-1 h-1 bg-[#d4c3a5] mx-auto rounded-full"></div>
          </div>
        ))}
      </div>
    </div>
  </section>

</Layout>